<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#953929">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="27dp"
        android:textStyle="italic|bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Draw a one digit number in the square below">
    </TextView>

    <com.example.digitrecognizer.PaintView
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:id="@+id/p_view"
        android:elevation="30dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        >
    </com.example.digitrecognizer.PaintView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        android:gravity="center">

        <Button
            android:id="@+id/select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:text="@string/clear_button"
            android:textColor="#953929"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/predict_button"
            android:textColor="#953929"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:text="Predict"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#953929"
            android:textColor="#953929"
            android:textStyle="bold"
            android:text="Result"
            android:id="@+id/result_view"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"></TextView>
    </LinearLayout>

    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textSize="20dp"
         android:text="Please select an image"
         android:id="@+id/text_view"
         android:layout_marginTop="40dp"/>
    -->
</LinearLayout>